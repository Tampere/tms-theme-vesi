{?breadcrumbs}
    <nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
        <ul class="breadcrumbs__nav is-relative is-flex m-0 p-0 is-family-secondary">
            {#breadcrumbs}
                <li class="{?is_active}is-active{/is_active} {?class}{class}{/class}">
                    {?permalink}
                        <a href="{permalink}" {?is_active}aria-current="page"{/is_active}>
                            {?icon}
                                {>"ui/icon" icon=icon class=icon_class /}
                            {/icon}

                            {?title}
                                {title|s}
                            {/title}

                            {?separator}
                                {>"ui/icon" icon=separator class="icon--small breadcrumb__separator" /}
                            {/separator}
                        </a>
                    {:else}
                        <span {?is_active}aria-current="page"{/is_active}>
                            {?icon}
                                {>"ui/icon" icon=icon class=icon_class /}
                            {/icon}

                            {?title}
                                {title|s}
                            {/title}
                        </span>
                    {/permalink}
                </li>
            {/breadcrumbs}
        </ul>
    </nav>
{/breadcrumbs}
